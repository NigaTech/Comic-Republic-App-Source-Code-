<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:background="@color/black">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="648dp">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="177dp"
         />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="350dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"


        android:layout_marginRight="20dp"

        android:src="@drawable/comichomop" />


    <Button
        android:id="@+id/selectphoto_button_register"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="132dp"
        android:layout_marginTop="-15dp"
        android:background="@drawable/login_buttons_backgroundpurple11"
        android:text="Select Photo"
        android:textAllCaps="false"
        android:textSize="17dp"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"

        android:layout_marginRight="20dp"
        >
    </Button>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selectphoto_imageview_register"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="126dp"
        android:layout_marginTop="-17dp"
        app:civ_border_width="4dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:layout_below="@+id/selectphoto_button_register"
        app:hintTextAppearance="@color/white"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/fullname_signup"
        android:layout_width="337dp"
        android:layout_height="41dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="500dp"
        android:background="@drawable/inputs_backgroundwhite"
        android:hint="Full Name..."
        android:inputType="textEmailAddress"
        android:maxLines="5"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout2"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:layout_below="@+id/textinputlayout"
        app:hintTextAppearance="@color/white"
        android:layout_height="wrap_content"
        android:padding="10dp">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/username_signup"
        android:layout_width="337dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textinputlayout"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="500dp"
        android:background="@drawable/inputs_backgroundwhite"
        android:hint="Username..."
        android:inputType="textEmailAddress"
        android:maxLines="5"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout4"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:textColorHint="@color/white"
        android:layout_below="@+id/textinputlayout2"
        app:hintTextAppearance="@color/white"
        android:layout_height="wrap_content"
        android:padding="10dp">


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/email_signup"
        android:layout_width="337dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textinputlayout2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="500dp"
        android:background="@drawable/inputs_backgroundwhite"
        android:hint="Email..."
        android:inputType="textEmailAddress"
        android:maxLines="5"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textinputlayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textinputlayout4"
        android:padding="10dp"
        android:textColorHint="@color/white"
        app:hintTextAppearance="@color/white"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/white"
        >
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/password_signup"
        android:layout_width="337dp"
        android:layout_height="41dp"
        android:layout_below="@+id/textinputlayout4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="500dp"
        android:background="@drawable/inputs_backgroundwhite"
        android:hint="Password..."
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"



        />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="325dp"
        android:layout_height="39dp"
        android:layout_below="@+id/textinputlayout1"

        android:background="@drawable/login_buttons_backgroundblue"
        android:text="Register"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="17dp"


        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="61dp"
        android:layout_marginRight="20dp"

        />

    <Button
        android:id="@+id/signin_link_btn"
        android:layout_width="347dp"
        android:layout_height="38dp"
        android:layout_below="@+id/signup_btn"
        android:background="@color/black"
        android:text="Already have an account? Sign In."
        android:textAllCaps="false"
        android:textColor="@color/white"


        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="61dp"
        android:layout_marginRight="20dp"
        />


</RelativeLayout>
</ScrollView>