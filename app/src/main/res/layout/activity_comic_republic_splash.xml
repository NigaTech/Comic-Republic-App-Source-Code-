<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/constraint_layout"
    android:background="@color/black"
    tools:context=".ComicRepublicSplashActivity">



    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:scaleType="centerCrop"
        android:src="@drawable/forrest"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >








        <ImageView
            android:id="@+id/logoshsr"
            android:layout_width="401dp"
            android:layout_height="173dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"


            android:src="@drawable/comichomop"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"

            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"


            android:padding="8dp" />


        <Button
            android:id="@+id/jumpin"
            android:layout_width="212dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:layout_below="@+id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="500dp"
            android:background="@drawable/login_buttons_transpa"
            android:text="Jump In"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/logoshs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="480dp"
            android:fontFamily="@font/kavoon"
            android:gravity="center"
            android:text="A World Of Heroes"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />











        <TextView
            android:id="@+id/movingtt"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="450dp"
            android:layout_marginEnd="101dp"
            android:visibility="invisible"
            android:gravity="center"

            android:text="AW"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/tv_email"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="5dp"
            android:fontFamily="@font/nunito_sans_bold_italic"

            android:layout_marginEnd="50dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_emailems"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="50dp"
            android:fontFamily="@font/nunito_sans_bold_italic"

            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="10dp"
            android:textStyle="bold" />












    </RelativeLayout>

</RelativeLayout>
