<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".SplashScreenActivity">


    <ImageView
        android:layout_width="143dp"
        android:id="@+id/splashscrerenid"
        android:layout_height="216dp"
        android:layout_gravity="center"
        android:src="@drawable/iconssplash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />


    <TextView
        android:id="@+id/signin_link_btndjhbh"
        android:layout_width="347dp"
        android:layout_height="38dp"
        android:layout_below="@+id/splashscrerenid"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@color/black"

        android:gravity="center"
        android:padding="8dp"
        android:text="from"


        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.421"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashscrerenid"
        app:layout_constraintVertical_bias="0.664" />

    <TextView
        android:id="@+id/signin_link_btnuu"
        android:layout_width="357dp"
        android:layout_height="44dp"
        android:layout_below="@+id/splashscrerenid"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@color/black"

        android:gravity="center"
        android:padding="8dp"
        android:text="COMIC REPUBLIC"
        android:textStyle="bold"

        android:textAllCaps="false"
        android:textColor="@color/redColor"
        android:textSize="16dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashscrerenid"
        app:layout_constraintVertical_bias="0.813" />


</androidx.constraintlayout.widget.ConstraintLayout>