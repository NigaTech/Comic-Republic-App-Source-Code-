<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:id="@+id/constraint_layout"
    android:background="@color/black">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    >


    <pl.droidsonroids.gif.GifImageView
        android:layout_width="394dp"
        android:layout_height="385dp"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="7dp"
        android:src="@drawable/bestgif" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="400dp"
        android:layout_height="220dp"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="215dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/comichomop" />

    <com.shobhitpuri.custombuttons.GoogleSignInButton
        android:id="@+id/account_sign_in"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo"
        android:text="@string/google_sign_up"
        app:isDarkTheme="true"

        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="115dp"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/textvieww"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_below="@+id/account_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"

        android:layout_marginRight="10dp"
        android:text="OR"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/signup_link_btn"
        android:layout_width="290dp"
        android:layout_height="37dp"
        android:background="@drawable/login_buttons_backgroundpurple"
        android:text="Sign up with Email "
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/account_sign_in"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="10dp"

        />











</RelativeLayout>
</ScrollView>